<panel>
  <title>Unix - Network Information - Top Inbound/Outbound Hosts</title>

  <input type="time" token="time_token" searchWhenChanged="true">
    <label>Time</label>
    <default>
      <earliestTime>-60m@m</earliestTime>
      <latestTime>now</latestTime>
    </default>
  </input>

  <input type="dropdown" token="NetworkHost" searchWhenChanged="true">
    <label>Local Host</label>
    <choice value="*">All</choice>
    <populatingSearch earliest="$time_token.earliest$" latest="$time_token.latest$" fieldForLabel="host" fieldForValue="host">`nix-netmon-hosts-search`</populatingSearch>
    <default>*</default>
  </input>

  <chart>
    <searchString>eventtype=netstat host="$NetworkHost$" | head 1 | multikv fields ForeignAddress | rex field=ForeignAddress "(?&lt;hostOnly&gt;^.*)[:\.].+$" | fields + hostOnly | where hostOnly != "*" | rename hostOnly as RemoteHostName | top limit=10 RemoteHostName</searchString>
    <earliestTime>$time_token.earliest$</earliestTime>
    <latestTime>$time_token.latest$</latestTime>
    <option name="charting.chart">bar</option>
    <option name="charting.axisTitleX.text">Host Name</option>
    <option name="charting.axisTitleY.text">Count</option>
  </chart>
</panel>